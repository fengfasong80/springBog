<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.fc.springmvc.modules.right.mapper.UserMapper">

	<select id="getUserByUsername" resultType="com.fc.springmvc.modules.right.entity.User">
		select * from user
		where username=#{username}
	</select>

</mapper>